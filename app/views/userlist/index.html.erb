<div class="container">
	<div class="row">
		<div class="col-md-3"></div>
		<div class="col-md-5">
			<% @users.each do |user| %>
				<div class="card">
				  <div class="card-block" align="middle">
				  	<img  src="<%= user.cover %>" alt="avatar" width="60%">
				    <h4 class="card-title"><%= user.user_name %></h4>
				    <p class="card-text"><%= user.email %></p>
				    <a href="#" class="btn btn-primary">Add friend</a>
				  </div>
				</div>
				</br></br>
			<% end %>
		</div>
	</div>
</div>