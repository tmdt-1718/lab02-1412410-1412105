<h1>THIS IS FRIENDS PAGE</h1>
<div class="container">
	<div class="row">
		<div class="col-md-3"></div>
		<div class="col-md-5">
			<% @friends.each do |friend| %>
				<div class="card">
				  <div class="card-block" align="middle">
				  	<img  src="<%= friend.user.cover %>" alt="avatar" width="60%">
				    <h4 class="card-title"><%= friend.user.user_name %></h4>
				    <p class="card-text"><%= friend.user.email %></p>
				    <a href="#" class="btn btn-primary">Unfriend</a>
				  </div>
				</div>
				</br></br>
			<% end %>
		</div>
	</div>
</div>