<div class="container">
  <div class="row">
    <h1>Register</h1>
    <div class="col-md-6 mx-auto">
      <%= form_with scope: :user, local: true do |f| %>
        <div class="form-group">
          <label>Username</label>
          <%= f.text_field :user_name, class: "form-control", placeholder: "Enter Username"%>
        </div>
        <div class="form-group">
          <label>Email</label>
          <%= f.text_field :email, class: "form-control", placeholder: "Enter Email"%>
        </div>
        <div class="form-group">
          <label>Password</label>
          <%= f.password_field :password, class: "form-control", placeholder: "Enter Password"%>
        </div>
        <div class="form-group">
          <label>Confirm Password</label>
          <%= f.password_field :confirm_password, class: "form-control", placeholder: "Enter Confirm Password"%>
        </div>
        <button type="submit" class="btn btn-primary">Resgiter</button>
        <a href="\sessions/login">You already have an account, Let's login</a>
      <% end %>
    </div>
  </div>
</div>
